<Page x:Class="NTFSDuplicateLinker.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NTFSDuplicateLinker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusPage">

	<Grid>
		<ProgressBar x:Name="pb" Background="{x:Null}" Foreground="{DynamicResource LightRed}" BorderBrush="{x:Null}">
			<ProgressBar.Effect>
				<BlurEffect Radius="50" RenderingBias="Quality"/>
			</ProgressBar.Effect>
		</ProgressBar>
		<StackPanel VerticalAlignment="Center">
			<Label x:Name="lbnum" FontSize="40" Foreground="LightGray"  HorizontalAlignment="Center"></Label>
			<Label x:Name="lb2" FontSize="20" Foreground="LightGray" HorizontalAlignment="Center"></Label>			
		</StackPanel>
		</Grid>
</Page>
