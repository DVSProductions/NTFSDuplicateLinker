<Window x:Class="NTFSDuplicateLinker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTFSDuplicateLinker"
        mc:Ignorable="d"
        Title="DVSProductions FileLinker" Height="450" Width="800">
	<Grid>
		<Label>Path:</Label>
		<TextBox x:Name="tbPath" Margin="41,0,90,0" Height="27" VerticalAlignment="Top"/>
		<ScrollViewer Margin="0,32,0,41">
			<StackPanel x:Name="spItems"/>
		</ScrollViewer>
		<Button x:Name="btAnalyze" Content="Analyze" VerticalAlignment="Top" Click="BtAnalyze_Click" Height="27" HorizontalAlignment="Right" Width="85"/>
		<ProgressBar x:Name="pbStatus" Margin="0,0,90,0" Height="41" VerticalAlignment="Bottom"/>
		<Button x:Name="btLink" Content="Link!" IsEnabled="False" Click="BtLink_Click" Height="41" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="90"/>
	</Grid>
</Window>
