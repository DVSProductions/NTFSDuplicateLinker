<Window x:Class="NTFSDuplicateLinker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTFSDuplicateLinker"
        mc:Ignorable="d"
        Title="DVSProductions FileLinker" Height="450" Width="651.11">
	<Grid Background="{DynamicResource BGColor}">
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="70"/>
		</Grid.RowDefinitions>
		<Label Foreground="LightGray" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5">NTFS Duplicate Linker</Label>
		<Frame Grid.Row="1" x:Name="PageViewer" Margin="0" NavigationUIVisibility="Hidden"/>
		<Button Grid.Row="2" x:Name="btNext" FontSize="20" Style="{DynamicResource BTStyle}" Margin="0,0,10,10" Click="BtNext_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="10,5">Next</Button>
		<Button Grid.Row="2" x:Name="btBack" FontSize="20" Style="{DynamicResource BTStyle}" Margin="10,0,0,10" Click="BtBack_Click" VerticalAlignment="Bottom" Visibility="Hidden" HorizontalAlignment="Left" Padding="10,5">Back</Button>
	</Grid>
</Window>
