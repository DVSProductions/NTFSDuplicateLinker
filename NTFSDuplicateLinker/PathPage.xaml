<Page x:Class="NTFSDuplicateLinker.PathPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NTFSDuplicateLinker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PathPage">

	<Grid>
		<StackPanel Margin="20,0" VerticalAlignment="Center" Grid.Row="1">
			<Label Foreground="LightGray" FontSize="20" Padding="10" HorizontalAlignment="Center" Content="Enter the Path where to start Analyzing"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="50"/>
				</Grid.ColumnDefinitions>
				<TextBox Style="{DynamicResource TBStyle}" FontSize="20" Height="50" Padding="5" x:Name="tbPath" BorderBrush="Gray" Text="C:\"  PreviewKeyDown="TbPath_PreviewKeyDown"/>
				<Button Grid.Column="1" Style="{DynamicResource BTStyle}" FontSize="30" Padding="0" FontFamily="Segoe UI Symbol" Click="Button_Click"></Button>
			</Grid>
			<Label x:Name="Error" Foreground="Red" FontSize="15" Visibility="Hidden">XXX</Label>
		</StackPanel>
	</Grid>
</Page>
